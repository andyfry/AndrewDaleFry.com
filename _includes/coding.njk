{% extends "base.njk" %}

{% block main %}
    <h1>{{title}}</h1>
    <h2>
        <span class="label">Published:</span><span class="date">{{page.date | date}}</span>
    </h2>
    {{content | safe}}
{% endblock %}

{% block sidebar %}
    <nav class="pages">
        <ul>
            {% for codingPage in collections.coding %}
                <li>
                    <a {%if codingPage.url === page.url%} class="active" {% endif%} href="{{codingPage.url}}">{{codingPage.data.title}}</a>
                </li>
            {% endfor %}
        </ul>
        <h2>Videos</h2>
        <ul>
        {% for series in collections.codingSeries %}
                <li>
                    <a {%if series.url === page.url%} class="active" {% endif%} href="{{series.url}}">{{series.data.title}}</a>
                </li>
            {% endfor %}
        </ul>
    </nav>
{% endblock %}